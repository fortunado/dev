#!/bin/sh

# CLO: "let" and "ban" 
# NC: add

in=$(basename $0)
in=${in%.*} 
inp0="""print ex 0 OK 100 tcp self [ add * wrd.db 1 0cc1 3217 345d 64e1 ];print ex 0 OK 100 tcp self [ last wrd.db 0cc1 ];quit"""
inp1="""print ex 0 OK 100 tcp self [ add * wrd.db 2 0cc1 1433 8eb1 3782 ];print ex 0 OK 100 tcp self [ last wrd.db 0cc1 ];quit"""
inp2="""print ex 0 REQ_MSG_HEAD 100 tcp self [ add * wrd.db 3 0cc1 1f61 9873 2d75 ];print ex 0 OK 100 tcp self [ last wrd.db 0cc1 ];quit"""

rm -fr dbs
mkdir dbs
cd dbs
$1/zdb erasedisk "create wrd.db wrd Word 1 [] 1 0"
$1/zdb load "add wrd.db 0 0cc1 0000 2e6c adb2"
cd ..

echo ................
echo "skckey+"
echo ................
$1/hasqd -clqnx db="dbs" dprn=1 dsvt=1 skckey="abc" s=@"$inp0" | grep -v "<svt> sendnote\|OK 1000"

echo ................
echo "skckey+ let+"
echo ................
$1/hasqd -clqnx db="dbs" dprn=1 dsvt=1 skckey="abc" s=@"$inp1" let="add" | grep -v "<svt> sendnote\|OK 1000"

echo ................
echo "skckey+ ban+"
echo ................
$1/hasqd -clqnx db="dbs" dprn=1 dsvt=1 skckey="abc" s=@"$inp2" ban="add" | grep -v "<svt> sendnote\|OK 1000"

rm -rf dbs
JQUID=../../ext/jq/
JQUIF=jquery-ui-1.11.4.custom
JQUI=$(JQUID)$(JQUIF)

all: help_tab_gen lib/jquery-ui slice/home/index.html

help_tab_tmp: front/hq_wid_stc_help_tab.js txt/*.htm
	echo "////////////////////////////////////////////////////" > front/help_tab.tmp
	echo "//   THIS IS AUTOGENERATED FILE, DO NOT MODIFY    //" >> front/help_tab.tmp
	echo "////////////////////////////////////////////////////" >> front/help_tab.tmp
	echo "" >> front/help_tab.tmp
	cat front/hq_wid_stc_help_tab.js >> front/help_tab.tmp

	
help_tab_gen: help_tab_tmp
	sh subster.sh < front/help_tab.tmp > front/help_tab.gen
	rm front/help_tab.tmp
#	cat front/help_tab.gen
	
	
lib/jquery-ui: $(JQUI).tar.bz2
	cp $< lib/
	cd lib && make NAME=$(JQUIF)
	
	
slice/home/index.html: index.html 
	mkdir -p slice/home/ui
	mkdir -p slice/home/lib
	mkdir -p slice/home/lib/images
	mkdir -p slice/home/front
	mkdir -p slice/home/eng
	mkdir -p slice/home/img
#	hqclnt
	cp eng/hq_*.js slice/home/eng/
	cp front/hq_*.js slice/home/front/
	mv -f front/help_tab.gen slice/home/front/hq_wid_stc_help_tab.js
	cp ui/hq_*.js slice/home/ui/	
	cp hqclnt.html slice/home/
#	tsclnt
	cp front/ts_*.js slice/home/front/
	cp ui/ts_*.js slice/home/ui/
	cp tsclnt.html slice/home/tsclnt.html
#	shared
	cp eng/sh_*.js slice/home/eng/
	cp img/*.gif slice/home/img/
	cp lib/jquery-ui/jquery-ui.min.js slice/home/lib/
	cp lib/jquery-ui/jquery-ui.min.css slice/home/lib/
	cp lib/jquery-ui/external/jquery/jquery.js slice/home/lib/
	cp lib/jquery-ui/images/ui-icons*.png slice/home/lib/images
	cp lib/jquery-ui/external/jquery/jquery.js slice/home/lib/
	cp index.html slice/home/
#
	chmod 0777 -R slice/home	
#	read
	
clean:
	rm -rf lib/jquery* slice/home index lib/*.tar lib/*.tar.bz2
	rm -rf slice/_MD5DB/2016 slice/_MD5DB/meta
	rm -rf slice/_R16DB/2016 slice/_R16DB/meta
	rm -rf slice/_S225DB/2016 slice/_S22DB/meta
	rm -rf slice/_S25DB/2016 slice/_S25DB/meta
	rm -rf slice/_MWRDB/2016 slice/_WRDDB/meta
	rm -rf front/help_tab.gen
	rm -rf front/help_tab.tmp
	rm -rf hq.*.lock	
	
	
myclean:
	rm -rf slice/home index
	rm -rf slice/_MD5DB/2016 slice/_MD5DB/meta
	rm -rf slice/_R16DB/2016 slice/_R16DB/meta
	rm -rf slice/_S225DB/2016 slice/_S22DB/meta
	rm -rf slice/_S25DB/2016 slice/_S25DB/meta
	rm -rf slice/_MWRDB/2016 slice/_WRDDB/meta	
	
	
checkin:
#	hqclnt
	cp -f slice/home/front/hq_wid_dyn_base.js front/
	cp -f slice/home/front/hq_wid_stc_base.js front/
	cp -f slice/home/front/hq_wid_stc_tokens_tab.js front/
	cp -f slice/home/front/hq_wid_dyn_tokens_tab.js front/
	cp -f slice/home/eng/*.js eng/
	cp -f slice/home/ui/*.js ui/
	cp -f slice/home/home.html ./hqclnt.html
	cp -f slice/home/index.html ./
#	tsclnt
